#include "stdafx.h"
#include <iostream>
#include <cmath>
#include "conio.h"

using namespace std;


int main() {
	float a,b,c,p,area;
	cout << "Ingrese el lado a" << endl;
	cin >> a;
	cout << "Ingrese el lado b" << endl;
	cin >> b;
	cout << "Ingrese el lado c" << endl;
	cin >> c;
	p = (a+b+c)/2;
	area = sqrtf(p*(p-a)*(p-b)*(p-c));
	cout << "El area es:" << area << endl;
	getch();
	return 0;
}
